<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   app:cardCornerRadius="5dp">

    <GridLayout
            android:layout_height="69dp"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:columnCount="4"
            android:rowCount="4"
    >


        <TextView
                android:text="BMI"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:id="@+id/tv_hist_bmi"
                android:layout_weight="1"

        />

        <TextView
                android:text="Mass"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:id="@+id/tv_hist_mass"
                android:layout_weight="1"
        />

        <TextView
                android:text="Height"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:id="@+id/tv_hist_height"
                android:layout_weight="1"
        />

        <TextView
                android:text="Date"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_hist_date"
                android:layout_weight="1"
        />


        <TextView
                android:text="BMI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_hist_bmi_value"
        />

        <TextView
                android:text="Mass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_hist_mass_value"
        />

        <TextView
                android:text="Height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_hist_height_value"
        />

        <TextView
                android:text="Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_hist_date_value"
        />


    </GridLayout>



</android.support.v7.widget.CardView>